<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:tag="layout/dialog_factory_reset_0"
    android:background="@color/primaryBlueDark"
    android:padding="@dimen/padding_default"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatTextView
        android:text="@string/dialog_factory_reset_app_title"
        android:textAllCaps="true"
        style="@style/DialogTitle"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dialogFactoryResetMessage"
        android:layout_marginTop="@dimen/padding_default"
        style="@style/DialogDescription"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_default"
        android:weightSum="2">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/dialogFactoryResetButtonNo"
            android:text="@string/dialog_factory_reset_app_button_no"
            android:layout_marginEnd="@dimen/padding_default"
            style="@style/BaseButtonStyle.Dialog"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/dialogFactoryResetButtonYes"
            android:text="@string/dialog_factory_reset_app_button_yes"
            style="@style/BaseButtonStyle.Dialog"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>
